{
	"name": "local-ci",
	"displayName": "LocalCi",
	"description": "Debug CircleCI builds locally, no more waiting and hoping.",
	"version": "0.1.0",
	"license": "GPL-2.0-or-later",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:localCi"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "local-ci.helloWorld",
				"title": "Hello World"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "localCiDebugger",
					"title": "Local CI Debugger",
					"icon": "resources/folder.svg"
				}
			]
		},
		"views": {
			"localCiDebugger": [
				{
					"id": "localCi",
					"name": "Circle CI Jobs"
				},
				{
					"id": "results",
					"name": "Job Results"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"prepare": "husky install",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"lint:fix": "eslint src --ext ts --fix",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/js-yaml": "^4.0.1",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"child_process": "^1.0.2",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"glob": "^7.1.7",
		"husky": "^7.0.1",
		"js-yaml": "^4.1.0",
		"mocha": "^8.4.0",
		"node-run-cmd": "^1.0.1",
		"prettier": "^2.3.1",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"util": "^0.12.4",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
