{
	"name": "local-ci",
	"displayName": "Local CI",
	"description": "Debug CircleCI速 jobs locally with Bash access and persistence between jobs. All in your local, without pushing commits and waiting.",
	"version": "0.1.0",
	"publisher": "local-ci",
	"preview": true,
	"license": "GPL-2.0-or-later",
	"galleryBanner": {
		"color": "#eff1f3",
		"theme": "light"
	},
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Debuggers"
	],
	"activationEvents": [
		"onView:localCi"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "localCiDebugger",
					"title": "Local CI Debugger",
					"icon": "resources/house.svg"
				}
			]
		},
		"views": {
			"localCiDebugger": [
				{
					"id": "localCi",
					"name": "CircleCI速 Jobs"
				}
			]
		}
	},
	"badges": [
		{
			"url": "https://badgen.net/badge/trial/2%20day/red",
			"href": "https://getlocalci.com",
			"description": "2 day free preview"
		},
		{
			"url": "https://badgen.net/badge/$/paid/yellow",
			"href": "https://getlocalci.com",
			"description": "Buy license key"
		},
		{
			"url": "https://badgen.net/badge/platform/MacOS/green",
			"href": "https://getlocalci.come",
			"description": "Platform: macOS"
		},
		{
			"url": "https://badgen.net/badge/requires/CircleCI%C2%AE/green",
			"href": "https://circleci.com",
			"description": "Requires CircleCI速"
		},
		{
			"url": "https://badgen.net/github/status/getlocalci/local-ci/develop/CircleCI",
			"href": "https://circleci.com/gh/getlocalci/local-ci",
			"description": "CircleCI速 status"
		}
	],
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"postinstall": "node ./setup/binaryInstall.js",
		"prepare": "husky install",
		"preuninstall": "node ./setup/binaryUninstall.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"lint:fix": "eslint src --ext ts --fix",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@cloudflare/binary-install": "^0.2.0",
		"@fluffy-spoon/substitute": "^1.208.0",
		"@types/glob": "^7.1.3",
		"@types/js-yaml": "^4.0.1",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/sinon": "^10.0.2",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"console.table": "^0.10.0",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"glob": "^7.1.7",
		"husky": "^7.0.1",
		"js-yaml": "^4.1.0",
		"mocha": "^8.4.0",
		"node-run-cmd": "^1.0.1",
		"npx": "^10.2.2",
		"prettier": "^2.3.1",
		"sinon": "^11.1.2",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"util": "^0.12.4",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
